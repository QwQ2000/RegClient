<!--pages/acc/acc.wxml-->
<view class="top-bar">
账户
</view>
<view class="yts">
<view class="name-text">
  
    <open-data type="userAvatarUrl" class="user-image"></open-data>
    

    <open-data type="userNickName" class="user-name"></open-data>
</view>

      
      <view class="first-form"  >
        <text class="text-left">起床时间</text>
          <view class="text-right">
           <picker mode="time" value='06:00' start="05:30" end="08:00" bindchange="changewaketime">
          {{waketime}}
        </picker></view>
        
      </view>

    <view class="form">
      <text class="text-left">入睡时间</text>
      <view class="text-right">
      <picker mode="time" value='21:00' start="21:00" end="23:30" bindchange="changebedtime">
        {{bedtime}}
      </picker></view>
    </view>


<view class='button-left'>
  <button class="text-left">账户积分</button>
  <button class="text-left">参赛记录</button>
  <button class="text-left" bindtap='onVersion'>版本信息</button>
</view>

</view>