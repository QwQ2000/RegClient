<view class='top-bar'> 比赛
</view>

<view class='cont-tag'>
  <view class='cont-font'>
  <view class='cont-right'>
    <text>  明日比赛 \n</text>
    <text class='cont-date'> {{month2}}月{{day2}}日</text>
  </view>
  <view class='cont-left'>
    <text> 当前奖金: {{newMoney}} </text>
  
  </view>
  </view>

  <button class='cont-button' bindtap='onToday'>
    我要参赛
  </button>
</view>
<view class='cont-tag'>
  <view class='cont-font'>
  <view class='cont-right'>
    <text>  今日比赛  \n</text>
    <text class='cont-date'> {{month1}}月{{day1}}日</text>
  </view>
  <view class='cont-left'>
    <text> 当前奖金: {{newMoney}} </text>
  
  </view>
  </view>

  <button class='cont-button-used'>
    报名已截止
  </button>  
  
</view>














